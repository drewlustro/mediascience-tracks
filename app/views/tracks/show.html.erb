<%= render :partial => "shared/track", :locals => {:track => @track } %>

<h3>Comments</h3>
<div class="padded">
  <%= render :partial => "shared/comment", :collection => @track.comments, :as => :comment %>
</div>

<% if @logged_in && @track.user_id == @current_user.id %>
  Options: <%= link_to 'Edit', edit_track_path(@track) %>
<% end %>